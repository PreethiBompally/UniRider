<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniRider.ActionBar"
        tools:targetApi="31">
        <activity
            android:name=".ReviewAcceptedOffersActivity"
            android:exported="false"
            android:parentActivityName=".Driver">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.Driver" />
        </activity>
        <activity
            android:name=".ReviewAcceptedRequestsActivity"
            android:exported="false"
            android:parentActivityName=".Rider">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.Rider" />
        </activity>

        <activity
            android:name=".ReviewRideOffersActivity"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".Rider">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="edu.uga.cs.unirider.Rider" />
        </activity>
        <activity
            android:name=".ReviewRideRequestsActivity"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".Driver">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.Driver" />
        </activity>
        <activity
            android:name=".RequestRide"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".Rider">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.Rider" />
        </activity>
        <activity
            android:name=".OfferRide"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".Driver">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.Driver" />
        </activity>
        <activity
            android:name=".RideOffers"
            android:screenOrientation="sensor"
            android:exported="false" />
        <activity
            android:name=".UserPoints"
            android:screenOrientation="sensor"
            android:exported="false"
            android:theme="@style/Theme.UniRider.NoActionBar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.MainActivity" />
        </activity>
        <activity
            android:name=".Driver"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.MainActivity" />
        </activity>
        <activity
            android:name=".Rider"
            android:screenOrientation="sensor"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uga.cs.unirider.MainActivity" />
        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="sensor"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:screenOrientation="sensor"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.UniRider.NoActionBar"
            android:screenOrientation="sensor"
            android:exported="true" />
    </application>

</manifest>